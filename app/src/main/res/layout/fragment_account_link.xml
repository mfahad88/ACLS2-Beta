<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e2e2e2"
    tools:context=".fragment.AccountLinkFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/card_view"
        app:cardElevation="5dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/radio_group_linking"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_js_wallet"
                    android:text="JS Wallet"/>

                <RadioButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_other"
                    android:text="Other"/>

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group_linking"
                android:id="@+id/relative_linking"
                android:visibility="visible"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/linear_mobile_no"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Mobile No"
                        android:gravity="right"/>

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:hint="03XXXXXXXXX"
                        android:inputType="number"
                        android:maxLength="11"
                        android:id="@+id/edt_mobile_no"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_cnic"
                    android:padding="5dp"
                    android:layout_below="@id/linear_mobile_no"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="CNIC"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:hint="42XXXXXXXXXXX"
                        android:maxLength="13"
                        android:id="@+id/edt_cnic"
                        android:inputType="number"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_cnic"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@drawable/drawable_btn_square"
                        android:text="OK"
                        android:id="@+id/btn_ok"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group_linking"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/relative_OTP">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_OTP"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">



                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_otp"
                        android:maxLength="4"
                        android:inputType="number"
                        android:hint="Enter OTP"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_OTP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/drawable_btn_square"
                        android:text="Submit"
                        android:id="@+id/btn_submit"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group_linking"
                android:id="@+id/relative_other"
                android:visibility="gone"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/linear_bank"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Bank"
                        android:gravity="right"/>

                    <Spinner
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_bank" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_acc"
                    android:padding="5dp"
                    android:layout_below="@id/linear_bank"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Account/IBAN"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="13"
                        android:id="@+id/edt_acc"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_title"
                    android:padding="5dp"
                    android:layout_below="@id/linear_acc"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Title of Account"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:maxLength="13"
                        android:focusable="false"
                        android:enabled="false"
                        android:longClickable="false"
                        android:id="@+id/edt_toa"
                        android:inputType="number"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_title"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@drawable/drawable_btn_square"
                        android:text="OK"
                        android:id="@+id/btn_other"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_view"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>