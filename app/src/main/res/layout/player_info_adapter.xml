<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_player_name"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:text="Test"
        android:textAlignment="textStart"
        android:textColor="#7b7a7a"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_short_country"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@id/txt_player_name"
        android:textColor="#e2e2e2"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textColor="#7b7a7a"
        android:layout_toRightOf="@id/txt_player_name"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/txt_points"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textColor="#7b7a7a"
        android:layout_toRightOf="@id/txt_points"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/txt_credits"/>
</RelativeLayout>