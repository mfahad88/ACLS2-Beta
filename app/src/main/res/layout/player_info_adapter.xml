<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:windowBackground"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/image_view_player"/>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textAlignment="textStart"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/txt_player_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_short_country"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:textColor="#e1e1e1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" - "
                android:textColor="#e1e1e1"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:textColor="#e1e1e1"
                android:id="@+id/txt_skill_player"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textColor="#7b7a7a"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/txt_points"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#505050"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/txt_credits"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="|"
            android:textColor="#e6e6e6"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <!--<ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:id="@+id/image_view_plus"
            android:visibility="gone"
            android:background="@drawable/drawable_plus"/>-->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:id="@+id/chk_captain"
            android:text="Captain"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:id="@+id/chk_vcaptain"
            android:text="Vice Captain"
            />
       <!-- <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="C"
            android:id="@+id/txt_captain"
            android:visibility="invisible"
            android:gravity="center"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:text="VC"
            android:visibility="invisible"
            android:id="@+id/txt_vice_captain"
            android:gravity="center"/>-->
    </LinearLayout>
</LinearLayout>