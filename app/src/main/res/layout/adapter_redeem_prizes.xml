<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:textAlignment="textStart"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:id="@+id/txt_team_name"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:layout_alignParentLeft="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ababab"
                android:text="Match Name"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/txt_match_name"
                android:layout_below="@id/txt_team_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:visibility="visible"
                android:text="Points Earned"
                android:textColor="#ababab"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_points"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_points"
                android:text="1000"
                android:visibility="visible"
                android:textSize="12sp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:id="@+id/txt_earned_points"
                android:textColor="#FFA01E"
                android:layout_alignParentRight="true"
                android:textAlignment="viewEnd"
                android:layout_gravity="end"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:textColor="@android:color/white"
                android:background="@drawable/drawable_btn_square"
                android:enabled="true"
                android:id="@+id/btn_redeem"
                android:text="redeem"
                android:layout_below="@id/txt_earned_points"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>



    </android.support.v7.widget.CardView>
</RelativeLayout>