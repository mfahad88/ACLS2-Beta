<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e2e2e2"
    android:scrollbars="vertical"
    tools:context=".fragment.MyDetailFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:id="@+id/card_view_score"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:layout_gravity="center">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/linear_mobile_no"
               android:weightSum="1">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Logged Mobile #"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:padding="5dp"
                   android:layout_weight="0.5"/>

               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:padding="5dp"
                   android:id="@+id/txt_mobile_no"
                   android:layout_weight="0.5"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/linear_title"
               android:layout_below="@id/linear_mobile_no"
               android:layout_centerHorizontal="true"
               android:weightSum="1">

               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:textSize="14sp"
                   android:padding="5dp"
                   android:textStyle="bold"
                   android:text="Coins"/>


               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:padding="5dp"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:text="Points"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_centerHorizontal="true"
               android:layout_below="@id/linear_title">

               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:gravity="center_horizontal"
                   android:id="@+id/txt_coins"/>

               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:padding="5dp"
                   android:gravity="center_horizontal"
                   android:id="@+id/txt_points"/>
           </LinearLayout>

       </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/card_view_score">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral Code"
                android:id="@+id/txt_referral_lbl"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14sp"
                android:id="@+id/txt_referral_code"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_referral_lbl"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:id="@+id/imageButtonShare"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_referral_code"
                android:background="@drawable/share_logo"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>