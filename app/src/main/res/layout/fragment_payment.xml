<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground"
    tools:context=".fragment.PaymentFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Mobile No."
                android:inputType="number"
                android:gravity="center_vertical"
                android:id="@+id/edt_mobile_no"
                android:textSize="15sp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edt_mobile_no"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner_telco"
                android:layout_alignLeft="@id/edt_mobile_no"
                android:layout_alignRight="@id/edt_mobile_no"></Spinner>

            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Amount"
                android:inputType="number"
                android:gravity="center_vertical"
                android:layout_below="@id/spinner_telco"
                android:id="@+id/txt_amount"
                android:textSize="15sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay"
                android:layout_below="@id/txt_amount"
                android:id="@+id/btn_pay"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>