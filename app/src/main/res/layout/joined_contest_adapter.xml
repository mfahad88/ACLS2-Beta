<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="15dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textColor="#4a4a4a"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Contest Name"
                android:id="@+id/txt_contest_name"
                android:gravity="center_vertical|start"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:textColor="#9b9b9b"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Contest Description"
                android:id="@+id/txt_contest_desc"
                android:layout_below="@id/txt_contest_name"
                android:gravity="center_vertical|start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Entry Fee"
                android:textAlignment="viewEnd"
                android:visibility="gone"
                android:id="@+id/txt_entry"
                android:textColor="#9b9b9b"
                android:gravity="end" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txt_entry"
                android:visibility="gone"
                android:text="Rs. 0"
                android:id="@+id/txt_entry_fee"
                android:textAlignment="viewEnd"
                android:gravity="end"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_line"
                android:layout_below="@id/txt_contest_desc"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#e8e8e8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/view_line"
                android:id="@+id/linear_header"
                android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Joined with"
                android:layout_weight=".5"
                android:id="@+id/txt_joined_with"
                android:textColor="#9b9b9b"
                android:textAllCaps="true" />



            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Points"
                android:layout_weight=".5"
                android:id="@+id/txt_point"
                android:textColor="#9b9b9b"
                android:textAllCaps="true"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_footer"
                android:layout_below="@id/linear_header">
            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight=".5"
                android:id="@+id/txt_team_name"
                android:textColor="#4a4a4a"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight=".5"
                    android:id="@+id/txt_points"
                    android:textColor="#4a4a4a"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/linear_footer"
                android:layout_marginTop="5dp"
                android:id="@+id/view_line_bottom"
                android:background="#e8e8e8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_leaderboard"
                android:layout_below="@id/view_line_bottom">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:textColor="#6a6a6a"
                    android:text="View Leaderboard"
                    android:layout_gravity="start"
                    android:layout_weight=".5"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:text=">"
                    android:textColor="#6a6a6a"
                    android:gravity="end"
                    android:layout_weight=".5"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>