<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        app:cardElevation="5dp"

        app:cardCornerRadius="5dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="top"
            android:id="@+id/relative_header"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_contest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Contest Name"
                android:textColor="#ababab"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_contest_desc"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/txt_contest_name"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="Contest Description"
                android:textColor="#282828"
                android:textSize="15sp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/btn_pay"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/txt_contest_desc"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:background="@drawable/button_square"
                android:text="view details"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_contest_desc"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:text="Points"
                android:id="@+id/txt_point"
                android:textAlignment="viewEnd"
                android:textAllCaps="true"
                android:textColor="#9b9b9b"
                android:textSize="10sp"
                android:layout_gravity="end" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@id/txt_point"
                android:id="@+id/txt_points"
                android:textColor="#4a4a4a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined with"
                android:textSize="10sp"
                android:layout_toRightOf="@id/txt_points"
                android:layout_below="@id/txt_contest_desc"
                android:id="@+id/txt_joined_with"
                android:textColor="#9b9b9b"
                android:textAllCaps="true" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_team_name"
                android:layout_below="@id/txt_joined_with"
                android:layout_toRightOf="@id/txt_points"
                android:textColor="#4a4a4a"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>